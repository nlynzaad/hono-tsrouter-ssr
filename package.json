{
  "name": "streaming-ssr-tanstack-hono",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "bun run --bun build:client && bun run --bun build:server",
    "build:client": "exit 0; vite build src/entry-client.tsx --outDir dist/client",
    "build:server": "vite build --ssr src/server/server.ts --outDir dist/server",
    "serve": "bun dist/server/server.js"
  },
  "dependencies": {
    "@tanstack/react-router": "^1.120.5",
    "@tanstack/react-start": "^1.120.5",
    "@tanstack/router-devtools": "^1.120.6",
    "hono": "^4.7.10",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@hono/vite-dev-server": "^0.19.0",
    "@tanstack/router-vite-plugin": "^1.120.5",
    "@types/bun": "latest",
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.5",
    "@vitejs/plugin-react": "^4.4.1",
    "typescript": "^5.8.3",
    "vite": "^5.4.19",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
